group :development do
  gem 'bundler', '~> 1.1'
  gem 'jeweler', '~> 2.2'
end

group :development, :test do
  gem 'rake'
  gem 'rspec', :require => 'spec'
  gem 'rdoc', '~> 3.11'
  # prawn for generating PDFs for tests
  gem 'prawn', '~> 0.12'
  # guard for auto-running tests
  gem 'guard-rspec', '~> 1.2'
end
